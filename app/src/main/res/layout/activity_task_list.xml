<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_sence_3"
    android:orientation="vertical">
    <include layout="@layout/back_title_text" />

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dime_42dp"
        android:background="@color/home_bule"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/house_task_dealt_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/house_task_dealt"
                android:textColor="@color/white"
                android:textSize="@dimen/dime_16sp" />
            <!-- Tab底部下划线 -->
            <ImageView
                android:id="@+id/iv_tab_bottom_img1"
                android:layout_width="@dimen/dime_60dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dime_32dp"
                android:layout_marginRight="@dimen/dime_32dp"
                android:src="@color/home_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/house_task_done_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/house_task_done"
                android:textColor="@color/white"
                android:textSize="@dimen/dime_16sp" />

            <ImageView
                android:id="@+id/iv_tab_bottom_img2"
                android:layout_width="@dimen/dime_60dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dime_32dp"
                android:layout_marginRight="@dimen/dime_32dp"
                android:src="@color/home_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/house_task_through_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/house_task_through"
                android:textColor="@color/white"
                android:textSize="@dimen/dime_16sp" />

            <ImageView
                android:id="@+id/iv_tab_bottom_img3"
                android:layout_width="@dimen/dime_60dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dime_32dp"
                android:layout_marginRight="@dimen/dime_32dp"
                android:src="@color/home_black" />
        </LinearLayout>
    </LinearLayout>


    <com.house.property.view.CustomViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/home_sence_3" />

</LinearLayout>