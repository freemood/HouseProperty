<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dime_16dp"
    android:layout_marginTop="@dimen/dime_16dp"
    android:layout_marginEnd="@dimen/dime_16dp"
    android:background="@drawable/shape_home_sence"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:text="@string/house_details_base"
            android:textColor="@color/black"
            android:textSize="@dimen/dime_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_1dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:background="@color/home_sence_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_8dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:layout_marginEnd="@dimen/dime_8dp"
            android:background="@drawable/shape_dialog_secen"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp">

            <TextView
                android:id="@+id/task_area_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:text="@string/house_task_details_bolck_qu"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />

            <TextView
                android:id="@+id/house_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:layout_marginBottom="@dimen/dime_8dp"
                android:layout_toEndOf="@+id/task_area_name_title"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_8dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:layout_marginEnd="@dimen/dime_8dp"
            android:layout_marginBottom="@dimen/dime_8dp"
            android:background="@drawable/shape_dialog_secen"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/house_task_adress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dime_8dp"
                android:text="@string/house_task_details_bolck_base"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />

            <TextView
                android:id="@+id/house_task_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:layout_toEndOf="@+id/house_task_adress_title"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_8dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:layout_marginEnd="@dimen/dime_8dp"
            android:background="@drawable/shape_dialog_secen"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:text="@string/house_task_details_zhufang_total"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />

            <EditText
                android:id="@+id/details_zhufang_total_et"
                android:layout_width="@dimen/dime_140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginEnd="@dimen/dime_8dp"
                android:background="@drawable/shape_dialog_secen"
                android:inputType="number"
                android:padding="@dimen/dime_8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_8dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:layout_marginEnd="@dimen/dime_8dp"
            android:background="@drawable/shape_dialog_secen"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:text="@string/house_task_details_feizhuzhai"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />

            <EditText
                android:id="@+id/details_feizhuzhai_et"
                android:layout_width="@dimen/dime_140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginEnd="@dimen/dime_8dp"
                android:background="@drawable/shape_dialog_secen"
                android:inputType="number"
                android:padding="@dimen/dime_8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dime_8dp"
            android:layout_marginTop="@dimen/dime_8dp"
            android:layout_marginEnd="@dimen/dime_8dp"
            android:background="@drawable/shape_dialog_secen"
            android:paddingTop="@dimen/dime_8dp"
            android:paddingBottom="@dimen/dime_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dime_8dp"
                android:text="@string/house_task_details_jungong_time"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />

            <TextView
                android:id="@+id/attribute_jungong_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dime_8dp"
                android:layout_marginEnd="@dimen/dime_8dp"
                android:text="@string/btn_checks"
                android:textColor="@color/black"
                android:textSize="@dimen/dime_16sp" />
        </RelativeLayout>
</LinearLayout>